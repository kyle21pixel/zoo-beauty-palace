'use client';

import { useState } from 'react';
import { Card } from '@zoo/ui';
import { 
  BarChart3, Users, Calendar, DollarSign, 
  TrendingUp, Settings, Moon, Sun 
} from 'lucide-react';

export default function AdminDashboard() {
  const [darkMode, setDarkMode] = useState(false);
  const [activeTab, setActiveTab] = useState('overview');

  const toggleDarkMode = () => setDarkMode(!darkMode);

  const stats = [
    { label: 'Total Users', value: '12,453', change: '+12.5%', icon: Users, color: '#FF4275' },
    { label: 'Total Bookings', value: '8,921', change: '+8.3%', icon: Calendar, color: '#774EAF' },
    { label: 'Total Revenue', value: '$284,592', change: '+15.2%', icon: DollarSign, color: '#FFB347' },
    { label: 'Active Providers', value: '234', change: '+5.7%', icon: TrendingUp, color: '#22C55E' },
  ];

  const tabs = [
    { id: 'overview', label: 'Overview', icon: BarChart3 },
    { id: 'users', label: 'Users', icon: Users },
    { id: 'bookings', label: 'Bookings', icon: Calendar },
    { id: 'settings', label: 'Settings', icon: Settings },
  ];

  return (
    <div style={{ 
      minHeight: '100vh', 
      background: darkMode ? '#0F0F0F' : '#F5F5F5',
      transition: 'background 0.3s ease',
    }}>
      {/* Header */}
      <header style={{
        background: darkMode ? '#1A1A1A' : 'white',
        borderBottom: darkMode ? '1px solid rgba(255,255,255,0.1)' : '1px solid #E5E5E5',
        padding: '1rem 2rem',
      }}>
        <div style={{
          maxWidth: '1600px',
          margin: '0 auto',
          display: 'flex',
          justifyContent: 'space-between',
          alignItems: 'center',
        }}>
          <h1 style={{
            fontSize: '1.5rem',
            fontWeight: 700,
            background: 'linear-gradient(135deg, #FF4275 0%, #774EAF 100%)',
            WebkitBackgroundClip: 'text',
            WebkitTextFillColor: 'transparent',
          }}>
            Zoo Beauty Admin
          </h1>
          
          <button
            onClick={toggleDarkMode}
            style={{
              background: 'none',
              border: 'none',
              cursor: 'pointer',
              color: darkMode ? 'white' : '#1A1A1A',
              display: 'flex',
              alignItems: 'center',
              gap: '0.5rem',
              padding: '0.5rem',
            }}
          >
            {darkMode ? <Sun size={20} /> : <Moon size={20} />}
          </button>
        </div>
      </header>

      {/* Tabs */}
      <div style={{
        background: darkMode ? '#1A1A1A' : 'white',
        borderBottom: darkMode ? '1px solid rgba(255,255,255,0.1)' : '1px solid #E5E5E5',
        padding: '0 2rem',
      }}>
        <div style={{
          maxWidth: '1600px',
          margin: '0 auto',
          display: 'flex',
          gap: '2rem',
        }}>
          {tabs.map(tab => {
            const Icon = tab.icon;
            const isActive = activeTab === tab.id;
            return (
              <button
                key={tab.id}
                onClick={() => setActiveTab(tab.id)}
                style={{
                  background: 'none',
                  border: 'none',
                  cursor: 'pointer',
                  display: 'flex',
                  alignItems: 'center',
                  gap: '0.5rem',
                  padding: '1rem 0',
                  color: isActive 
                    ? (darkMode ? 'white' : '#1A1A1A')
                    : (darkMode ? '#737373' : '#A3A3A3'),
                  borderBottom: isActive ? '2px solid #FF4275' : '2px solid transparent',
                  fontWeight: isActive ? 600 : 400,
                }}
              >
                <Icon size={18} />
                {tab.label}
              </button>
            );
          })}
        </div>
      </div>

      {/* Main Content */}
      <main style={{ maxWidth: '1600px', margin: '0 auto', padding: '2rem' }}>
        {activeTab === 'overview' && (
          <div>
            <h2 style={{
              fontSize: '1.75rem',
              fontWeight: 700,
              color: darkMode ? 'white' : '#1A1A1A',
              marginBottom: '2rem',
            }}>
              Platform Overview
            </h2>

            {/* Stats Grid */}
            <div style={{
              display: 'grid',
              gridTemplateColumns: 'repeat(auto-fit, minmax(250px, 1fr))',
              gap: '1.5rem',
              marginBottom: '2rem',
            }}>
              {stats.map((stat, index) => {
                const Icon = stat.icon;
                return (
                  <Card
                    key={index}
                    variant="elevated"
                    style={{
                      background: darkMode ? '#1A1A1A' : 'white',
                      border: darkMode ? '1px solid rgba(255,255,255,0.1)' : 'none',
                      padding: '1.5rem',
                    }}
                  >
                    <div style={{
                      display: 'flex',
                      justifyContent: 'space-between',
                      alignItems: 'flex-start',
                      marginBottom: '1rem',
                    }}>
                      <div style={{
                        width: '48px',
                        height: '48px',
                        borderRadius: '12px',
                        background: darkMode ? `${stat.color}20` : `${stat.color}15`,
                        display: 'flex',
                        alignItems: 'center',
                        justifyContent: 'center',
                      }}>
                        <Icon size={24} style={{ color: stat.color }} />
                      </div>
                      <span style={{
                        fontSize: '0.875rem',
                        fontWeight: 600,
                        color: '#22C55E',
                      }}>
                        {stat.change}
                      </span>
                    </div>
                    <p style={{
                      fontSize: '0.875rem',
                      color: darkMode ? '#A3A3A3' : '#737373',
                      marginBottom: '0.25rem',
                    }}>
                      {stat.label}
                    </p>
                    <p style={{
                      fontSize: '2rem',
                      fontWeight: 700,
                      color: darkMode ? 'white' : '#1A1A1A',
                    }}>
                      {stat.value}
                    </p>
                  </Card>
                );
              })}
            </div>

            <Card
              variant="elevated"
              style={{
                background: darkMode ? '#1A1A1A' : 'white',
                border: darkMode ? '1px solid rgba(255,255,255,0.1)' : 'none',
                padding: '2rem',
              }}
            >
              <h3 style={{
                fontSize: '1.25rem',
                fontWeight: 600,
                color: darkMode ? 'white' : '#1A1A1A',
                marginBottom: '1rem',
              }}>
                Quick Actions
              </h3>
              <p style={{ color: darkMode ? '#A3A3A3' : '#737373' }}>
                Admin dashboard is working! The full version with all features is backed up in page.tsx.backup.
              </p>
            </Card>
          </div>
        )}

        {activeTab === 'users' && (
          <div>
            <h2 style={{
              fontSize: '1.75rem',
              fontWeight: 700,
              color: darkMode ? 'white' : '#1A1A1A',
              marginBottom: '2rem',
            }}>
              User Management
            </h2>
            <Card
              variant="elevated"
              style={{
                background: darkMode ? '#1A1A1A' : 'white',
                border: darkMode ? '1px solid rgba(255,255,255,0.1)' : 'none',
                padding: '2rem',
              }}
            >
              <p style={{ color: darkMode ? '#A3A3A3' : '#737373' }}>
                User management features coming soon...
              </p>
            </Card>
          </div>
        )}

        {activeTab === 'bookings' && (
          <div>
            <h2 style={{
              fontSize: '1.75rem',
              fontWeight: 700,
              color: darkMode ? 'white' : '#1A1A1A',
              marginBottom: '2rem',
            }}>
              Bookings
            </h2>
            <Card
              variant="elevated"
              style={{
                background: darkMode ? '#1A1A1A' : 'white',
                border: darkMode ? '1px solid rgba(255,255,255,0.1)' : 'none',
                padding: '2rem',
              }}
            >
              <p style={{ color: darkMode ? '#A3A3A3' : '#737373' }}>
                Booking management features coming soon...
              </p>
            </Card>
          </div>
        )}

        {activeTab === 'settings' && (
          <div>
            <h2 style={{
              fontSize: '1.75rem',
              fontWeight: 700,
              color: darkMode ? 'white' : '#1A1A1A',
              marginBottom: '2rem',
            }}>
              Settings
            </h2>
            <Card
              variant="elevated"
              style={{
                background: darkMode ? '#1A1A1A' : 'white',
                border: darkMode ? '1px solid rgba(255,255,255,0.1)' : 'none',
                padding: '2rem',
              }}
            >
              <p style={{ color: darkMode ? '#A3A3A3' : '#737373' }}>
                Settings panel coming soon...
              </p>
            </Card>
          </div>
        )}
      </main>
    </div>
  );
}
